{
  "name": "m3u8-downloader",
  "version": "0.2.4",
  "description": "M3U8 Downloader Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate-version": "node scripts/generate-version.js",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run generate-version && vite build && electron-builder"
  },
  "keywords": [
    "m3u8",
    "downloader",
    "electron",
    "ffmpeg"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.6.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.0",
    "m3u8-parser": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.m3u8.downloader",
    "productName": "M3U8 Downloader",
    "directories": {
      "output": "dist_electron"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static"
    ],
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icon.png",
      "target": "dmg"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  }
}